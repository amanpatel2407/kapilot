<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/vehicle_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/auto_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        
        
        <TextView
            android:id="@+id/vehicle_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/vehicle_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="MP 09 MA ****"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/vehicle_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vehicle_number"
            app:layout_constraintStart_toEndOf="@id/vehicle_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Auto"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/paster_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vehicle_name"
            app:layout_constraintStart_toEndOf="@id/vehicle_img"
            app:layout_constraintEnd_toStartOf="@id/vehicle_pasting_date"
            android:text="Ram Lal Yadav"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:layout_marginHorizontal="10dp"/>



        <TextView
            android:id="@+id/vehicle_pasting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vehicle_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="12 oct, 2021"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginHorizontal="10dp"/>
        

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>